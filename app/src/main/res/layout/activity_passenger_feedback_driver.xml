<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.driver.menu.feedbacks.PassengerFeedbackDriver">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:elevation="@dimen/_10sdp"
            app:fabCustomSize="@dimen/_42sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_75sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/MenuDriverItem4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_23ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.taosif7.android.ringchartlib.RingChart
            android:id="@+id/feedbackRingChart"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_155sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pointRingChart"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/_40sdp"
            app:RingChartSecondaryColor="@color/light_silver" />

        <com.taosif7.android.ringchartlib.RingChart
            android:id="@+id/pointRingChart"
            android:layout_width="@dimen/_155sdp"
            android:layout_height="@dimen/_155sdp"
            app:layout_constraintStart_toEndOf="@id/feedbackRingChart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/_40sdp"
            app:RingChartSecondaryColor="@color/yellow" />

        <LinearLayout
            android:id="@+id/averageStarLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/feedbackRingChart"
            app:layout_constraintStart_toStartOf="@id/feedbackRingChart"
            app:layout_constraintBottom_toBottomOf="@id/feedbackRingChart"
            app:layout_constraintEnd_toEndOf="@id/feedbackRingChart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAverageStarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="@string/AverageStarCount"
                android:textColor="@color/sub_content"
                android:textSize="@dimen/_11ssp"
                android:layout_marginVertical="@dimen/_5sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRatingAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="0.0"
                    android:textColor="@color/button_background"
                    android:textSize="@dimen/_22ssp"
                    android:layout_marginStart="@dimen/_8sdp"/>

                <ImageView
                    android:id="@+id/ivStar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:src="@drawable/star_icon" />

            </LinearLayout>
        </LinearLayout>

        <com.github.hamzaahmedkhan.counteranimationtextview.CountAnimationTextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/text_color"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/_23ssp"
            app:layout_constraintTop_toTopOf="@id/pointRingChart"
            app:layout_constraintStart_toStartOf="@id/pointRingChart"
            app:layout_constraintBottom_toBottomOf="@id/pointRingChart"
            app:layout_constraintEnd_toEndOf="@id/pointRingChart"/>

        <TextView
            android:id="@+id/tvPointTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/Point"
            android:textColor="@color/sub_content"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintTop_toBottomOf="@id/tvPoint"
            app:layout_constraintStart_toStartOf="@id/pointRingChart"
            app:layout_constraintEnd_toEndOf="@id/pointRingChart"/>

        <TextView
            android:id="@+id/tvTitleDetailReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="@string/TitleDetailedReviews"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintTop_toBottomOf="@id/feedbackRingChart"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvNotHaveReview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:fontFamily="@font/inter"
            android:textColor="@color/sub_content"
            android:text="@string/HaveNoReview"
            android:textSize="@dimen/_15ssp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDetailReview"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_475sdp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDetailReview"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dimOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"/>

    <include
        android:id="@+id/sideSheetMenu"
        layout="@layout/menu_driver_side_sheet"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout_behavior="com.google.android.material.sidesheet.SideSheetBehavior"
        tools:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>