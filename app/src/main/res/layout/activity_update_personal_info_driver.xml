<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".features.driver.menu.personal_info.UpdatePersonalInfoDriverActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:elevation="@dimen/_10sdp"
            app:fabCustomSize="@dimen/_42sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/ivEditAvatar"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_135sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:src="@drawable/edit_avatar_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/inter"
            android:text="@string/EmailAddress"
            android:textColor="@color/text_color"
            android:textFontWeight="700"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/emailValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivEditAvatar" />

        <EditText
            android:id="@+id/emailValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/edittext_border"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/edittext_background"
            app:layout_constraintBottom_toTopOf="@id/titleLicense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleEmail" />

        <TextView
            android:id="@+id/titleLicense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/inter"
            android:text="@string/UpdateLicense"
            android:textColor="@color/text_color"
            android:textFontWeight="700"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/licenseValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailValue" />

        <EditText
            android:id="@+id/licenseValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/edittext_border"
            android:inputType="phone"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/edittext_background"
            app:layout_constraintBottom_toTopOf="@id/titleVehicleColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleLicense" />

        <TextView
            android:id="@+id/titleVehicleColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/inter"
            android:text="@string/UpdateColor"
            android:textColor="@color/text_color"
            android:textFontWeight="700"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/vehicleColorValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/licenseValue" />

        <EditText
            android:id="@+id/vehicleColorValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/edittext_border"
            android:padding="@dimen/_12sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/edittext_background"
            app:layout_constraintBottom_toTopOf="@id/titleUploadVehicleImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleVehicleColor" />

        <TextView
            android:id="@+id/titleUploadVehicleImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/inter"
            android:text="@string/UploadVehicleImage"
            android:textColor="@color/text_color"
            android:textFontWeight="700"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@id/vehicleColorValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vehicleColorValue" />

        <Button
            android:id="@+id/uploadVehicleImageButton"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/light_silver"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_12sdp"
            android:stateListAnimator="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleUploadVehicleImage" />

        <ImageView
            android:id="@+id/ivUploadIcon"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/upload_icon"
            app:layout_constraintBottom_toBottomOf="@+id/uploadVehicleImageButton"
            app:layout_constraintEnd_toEndOf="@id/uploadVehicleImageButton"
            app:layout_constraintStart_toStartOf="@id/uploadVehicleImageButton"
            app:layout_constraintTop_toTopOf="@id/uploadVehicleImageButton" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/button_background"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_16sdp"
            android:stateListAnimator="@null"
            android:text="@string/Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="@dimen/_22ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uploadVehicleImageButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>